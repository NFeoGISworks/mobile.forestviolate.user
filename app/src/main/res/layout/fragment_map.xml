<RelativeLayout
    android:id="@+id/maprl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/mapfl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/fl_status_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_above="@id/fl_status_panel"
        android:background="@drawable/divider"/>

    <LinearLayout
        android:id="@+id/ll_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/divider"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/status_panel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_legend_felling"
            android:drawableStart="@drawable/ic_legend_felling"
            android:text="@string/felling_short"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/status_panel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_legend_fire"
            android:drawableStart="@drawable/ic_legend_fire"
            android:text="@string/fire"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/status_panel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_legend_garbage"
            android:drawableStart="@drawable/ic_legend_garbage"
            android:text="@string/garbage_short"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/status_panel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_legend_misc"
            android:drawableStart="@drawable/ic_legend_misc"
            android:text="@string/misc_short"/>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonColorPressed="?attr/colorAccent"
        fab:fab_addButtonPlusIconColor="@android:color/white"
        fab:fab_icon="@mipmap/ic_plus"
        fab:fab_size="mini"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/action_zoom_in"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonColorPressed="?attr/colorAccent"
        fab:fab_addButtonPlusIconColor="@android:color/white"
        fab:fab_icon="@mipmap/ic_minus"
        fab:fab_size="mini"/>
</RelativeLayout>
