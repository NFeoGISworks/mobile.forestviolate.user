<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_own"
            android:drawableStart="@drawable/ic_legend_own"
            android:text="@string/own"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_others"
            android:drawableStart="@drawable/ic_legend_others"
            android:text="@string/others"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_violation"
            android:drawableStart="@drawable/ic_legend_violation"
            android:text="@string/title_notes"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_felling"
            android:drawableStart="@drawable/ic_legend_felling"
            android:text="@string/felling_short"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_fire"
            android:drawableStart="@drawable/ic_legend_fire"
            android:text="@string/fire"/>

        <com.nextgis.safeforest.util.AutoFitTextView
            style="@style/legend_text"
            android:drawableLeft="@drawable/ic_legend_garbage"
            android:drawableStart="@drawable/ic_legend_garbage"
            android:text="@string/garbage_short"/>

        <!--<com.nextgis.safeforest.util.AutoFitTextView-->
            <!--style="@style/legend_text"-->
            <!--android:drawableLeft="@drawable/ic_legend_misc"-->
            <!--android:drawableStart="@drawable/ic_legend_misc"-->
            <!--android:text="@string/misc_short"/>-->
    </LinearLayout>
</LinearLayout>